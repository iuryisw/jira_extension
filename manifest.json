{
  "manifest_version": 3,
  "name": "Sprint Details for JIRA",
  "version": "1.0.0",
  "description": "Automatically displays Sprint Details near Quick Filters in JIRA",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.atlassian.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/jira/software/*"
      ],
      "js": ["content/content.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Sprint Details for JIRA Settings"
  }
}