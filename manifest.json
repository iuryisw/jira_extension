{
  "manifest_version": 3,
  "name": "JIRA Sprint Details Display",
  "version": "1.0.0",
  "description": "Automatically displays Sprint Details near Quick Filters in JIRA",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.atlassian.net/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.atlassian.net/jira/software/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "JIRA Sprint Details Settings"
  }
}